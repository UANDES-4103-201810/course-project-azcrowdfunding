<div class="container">
  <h1 class="animated slideInUp">Categories</h1>
  <br>
  <%= link_to "Featured Projects", show_outstanding_path, class: "btn btn-warning btn-lg btn-block animated bounceIn" %>
  <br><br>
  <%= link_to "All", projects_path, class: "btn btn-default btn-lg btn-block animated bounceIn" %>
  <% if user_signed_in? %>
    <% if current_user.admin %>
      <br>
      <% @categories.each do |category| %>
        <div class="col-sm-10">
          <%= link_to category.tag, show_by_cat_path(category.tag), class: "btn btn-default btn-lg btn-block animated bounceIn" %>
        </div>
        <div class="col-sm-2">
          <div class="btn-group btn-group-justified animated bounceIn">
            <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_category_path(category), class: "btn btn-default btn-lg" %>
            <%= link_to '<i class="far fa-minus-square", size="6x"></i>'.html_safe, category, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-default btn-lg" %>
          </div>

        </div>
      <% end %>
    <% else %>
      <% @categories.each do |category| %>
        <%= link_to category.tag, show_by_cat_path(category.tag), class: "btn btn-default btn-lg btn-block animated bounceIn" %>
      <% end %>
    <% end %>
  <% else %>
    <% @categories.each do |category| %>
      <%= link_to category.tag, show_by_cat_path(category.tag), class: "btn btn-default btn-lg btn-block animated bounceIn" %>
    <% end %>
  <% end %>
  <br>
</div>


