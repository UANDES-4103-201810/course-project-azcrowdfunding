<div class="container">
  <h1>Projects by <%=@tagname%></h1>
  <table class="table">
    <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Goal</th>
      <th>Duration</th>
      <th>Markdown</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= Project.find_by_id(category.project_id).title %></td>
        <td><%= Project.find_by_id(category.project_id).description%></td>
        <td><%= Project.find_by_id(category.project_id).goal %></td>
        <td><%= Project.find_by_id(category.project_id).duration %></td>
        <td><%= Project.find_by_id(category.project_id).markdown %></td>

        <td><%= link_to 'Show', Project.find_by_id(category.project_id), :class => "btn btn-link" %></td>

      </tr>
    <% end %>
    </tbody>
  </table>
</div>