<p id="notice"><%= notice %></p>
<div class="container">
<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>E-Mail</th>
      <th>Active</th>
      <th>Last login</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.personal_info.first_name %></td>
        <td><%= user.personal_info.last_name %></td>
        <td><%= user.personal_info.email %></td>
        <td><%= user.active %></td>
        <td><%= user.last_login %></td>
        <td><%= link_to 'Show', user, class: 'btn btn-link' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-link' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>