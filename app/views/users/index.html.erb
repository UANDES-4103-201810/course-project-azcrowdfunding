<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Users</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Admin</th>
        <th>ID</th>
        <th>Full name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.admin %></td>
          <td><%= user.id %></td>
          <td><%= user.first_name %> <%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td><%= user.address %>, <%= user.city %> <%= user.country %></td>
          <td><%= link_to 'Show', user, :class => "btn btn-link" %></td>
          <td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-link" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-link" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
