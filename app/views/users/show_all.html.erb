<div class="container">
  <h1>All Users</h1>
  <p>Total: <%= User.all.count %> users</p>
  <table class="table">
    <thead>
    <tr>
      <th></th>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% User.all.each do |user| %>
      <td>
        <% if user.avatar.exists? %>
          <td><%= image_tag(user.avatar.url(:thumb), size: "25x25") %></td>
        <% else %>
          <td>-----</td>
        <% end %>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>

        <td><div class="btn-group">
          <%= link_to 'Show', user, class: "btn btn-default", type: 'button' %>
          <%= link_to 'Edit', edit_user_path(user), class: "btn btn-default", type: 'button' %>
          <%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-default", type: 'button' %>
        </div></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>