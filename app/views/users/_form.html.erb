<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-sm-5">

    <div class="form-check">
      <%= form.check_box :active, id: :user_active, class: 'form-check-input' %>
      <label class="form-check-label" for="exampleCheck1"><%= form.label :active %></label>
    </div>

    <div class="field">
      <%= form.label :last_login %>
      <%= form.datetime_select :last_login, id: :user_last_login %>
    </div>
    <div>
      <%= form.fields_for :personal_info do |personal| %>
        <%= personal.label :first_name %>
        <%= personal.text_field :first_name %>
        <br>
        <%= personal.label :last_name %>
        <%= personal.text_field :last_name %>
        <br>
        <%= personal.label :phone %>
        <%= personal.text_field :phone %>
        <br>
        <%= personal.label :admin %>
        <%= personal.check_box :admin %>
        <br>
        <%= personal.label :email %>
        <%= personal.text_field :email %>
        <br>
        <%= personal.label :address %>
        <%= personal.text_field :address %>
        <br>
        <%= personal.label :country %>
        <%= personal.text_field :country %>
        <br>
        <%= personal.label :city %>
        <%= personal.text_field :city %>
      <% end %>
    </div>



    <div class="actions">
      <button type="submit" class="btn btn-primary">Submit</button>
      <!--<%= form.submit %>-->
    </div>
  </div>
<% end %>
