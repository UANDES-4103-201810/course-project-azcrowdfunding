<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-sm-5">

    <div class="form-check">
      <%= form.check_box :active, id: :user_active, class: 'form-check-input' %>
      <label class="form-check-label" for="exampleCheck1"><%= form.label :active %></label>
    </div>

    <div class="field">
      <%= form.label :last_login %>
      <%= form.datetime_select :last_login, id: :user_last_login %>
    </div>

    <%= form.fields_for :personal_info do |personal| %>
      <%= personal.label :first_name %>
      <%= personal.text_field :first_name %>
    <% end %>


    <div class="actions">
      <button type="submit" class="btn btn-primary">Submit</button>
      <!--<%= form.submit %>-->
    </div>
  </div>
<% end %>
