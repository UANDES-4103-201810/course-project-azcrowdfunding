<div class="container">
  <div class="row">
    <%= link_to 'All', my_projects_path%>
    <%= link_to 'Waiting', show_my_waiting_path %>
    <%= link_to 'Funded', show_my_funded_path  %>
  </div>
  <h1>Projects Funded  </h1>
  <table class="table">
    <thead>
    <tr>
      <th>Title</th>
      <th>Amount</th>
      <th>Type</th>
      <th>Promise Title</th>
      <th>User Who Donated</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>

    <% @contributions.each do |contribution| %>
      <tr>
        <td><%= contribution.project.title %></td>
        <td><%= contribution.amount %></td>
        <td>Contribution</td>
        <td>---</td>
        <td><%= contribution.user.first_name %></td>
        <td><%= link_to 'Show project', contribution.project, :class => "btn btn-link" %></td>
      </tr>
    <%end%>
    <% @finances.each do |finance| %>
      <tr>
        <td><%= finance.promise.project.title %></td>
        <td><%= finance.promise.amount%></td>
        <td>Promise</td>
        <td><%= finance.promise.title%></td>
        <td><%= finance.user.first_name %></td>
        <td><%= link_to 'Show project', finance.promise.project, :class => "btn btn-link" %></td>
      </tr>
    <% end %>



    </tbody>
  </table>
</div>
