<%= form_with(model: project, local: true, :html => { :multipart => true }) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
  <div class="form-group col-sm-5">
    <form>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :project_title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, id: :project_description, class: "form-control", rows: "4" %>
      </div>

      <div class="form-group">
        <%= form.label :goal %>
        <%= form.number_field :goal, id: :project_goal, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :duration %>
        <%= form.number_field :duration, id: :project_duration, class: "form-control" %>
      </div>

      <div class="form-group" hidden>
        <%= form.label :markdown %>
        <%= form.hidden_field :markdown, id: :project_markdown, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :main_image %>
        <div class="input-group">
            <span class="input-group-btn">
                <span class="btn btn-default btn-file">
                  Browser...<%= form.file_field :main_image, class: "file", type: 'file'%>
                </span>
            </span>
          <input type="text" class="form-control" readonly>
        </div>
        <img id='img-upload'/>
      </div>

      <div class="form-group">
        <label>Categories</label><br>
        <%= form.collection_check_boxes :category_ids, Category.all, :id, :tag do |option| %>
          <%= option.check_box + option.text %><br>
        <% end %>

      </div>

      <div class="actions">
        <button type="submit" class="btn btn-primary">Submit</button>
        <%= link_to 'Cancel', :back, class: "btn btn-danger" %>
      </div>
    </form>
  </div>

  <div class="col-sm-7" align="center" style="padding-top: 100px">
    <%= image_tag("crowdfunding_bubbles.png", alt: "Edit Entry", class: "img-responsive animated fadeInUp") %>
  </div>
  </div>
<% end %>
