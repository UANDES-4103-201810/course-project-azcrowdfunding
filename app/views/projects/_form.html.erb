<%= form_with(model: project, local: true) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-sm-5">

    <div class="form-check">
      <%= form.check_box :active, id: :project_active, class: 'form-check-input' %>
      <label class="form-check-label" for="exampleCheck1"><%= form.label :active %></label>
    </div>

    <div class="form-check">
      <%= form.check_box :visible, id: :project_visible, class: 'form-check-input' %>
      <label class="form-check-label" for="exampleCheck1"><%= form.label :visible %></label>
    </div>

    <div class="field">
      <%= form.label :release_date %>
      <%= form.datetime_select :release_date, id: :project_release_date %>
    </div>

    <div class="form-group" >
      <label for="exampleInputEmail1"><%= form.label :user_id %></label>
      <%= form.text_field :user_id, id: :project_user_id, class: 'form-control' %>
    </div>

    <div class="actions">
      <button type="submit" class="btn btn-primary">Submit</button>
      <!--<%= form.submit %>-->
    </div>



  </div>
<% end %>
