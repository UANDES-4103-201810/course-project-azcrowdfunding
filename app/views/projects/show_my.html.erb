<div class="container">
  <h1>Projects</h1>
  <table class="table">
    <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Goal</th>
      <th>Duration</th>
      <th>Markdown</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% current_user.projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= project.goal %></td>
        <td><%= project.duration %></td>
        <td><%= project.markdown %></td>
        <td><%= link_to 'Show', project, :class => "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_project_path(project), :class => "btn btn-link" %></td>

        <td><%= link_to 'Destroy', project, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-link" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
