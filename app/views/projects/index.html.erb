<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>All Projects</h1>
  <%= link_to "Filter", categories_path, class: "btn btn-link"%>
  <br>
  <br>
    <% @projects.each do |project| %>
      <div class="row">
        <div class="col-sm-5">
          <%= link_to(image_tag(project.main_image.url(:large), class: "img-fluid img-thumbnail"), project, class: "img-fluid") %>
          <%= %>
        </div>
        <div class="col-sm-5" style="padding-top: 35px">
          <h3><%= project.title %></h3>
          <p><%= project.description %></p>
          <br>
          <div class="col-sm-6" align="center">
            <p><b>Goal: </b>$<%= project.goal %></p>
          </div>
          <div class="col-sm-6" align="center">
            <p>Ends <%= (project.created_at.to_date + (project.duration).months).strftime("%B %e, %Y") %></p>
          </div>
        </div>
        <div class="col-sm-2" style="padding-top: 70px">
          <% if user_signed_in? %>
            <% if current_user.id == project.user_id or current_user.admin %>
              <td><%= link_to 'Show', project, :class => "btn btn-primary btn-block" %></td>
              <br>
              <td><%= link_to 'Edit', edit_project_path(project), :class => "btn btn-warning btn-block" %></td>
              <br>
              <td><%= link_to 'Delete', project, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-danger btn-block" %></td>
            <% end %>
          <% end %>
        </div>
      </div>
      <br>
    <% end %>
</div>
