<%= form_with(model: promise, local: true, :html => { :multipart => true }) do |form| %>
  <% if promise.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(promise.errors.count, "error") %> prohibited this promise from being saved:</h2>

      <ul>
      <% promise.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
  <div class="form-group col-sm-5">
    <form>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :promise_title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, id: :promise_description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :edd %>
        <%= form.date_field :edd, id: :promise_edd, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :amount %>
        <%= form.number_field :amount, id: :promise_amount, class: "form-control" %>
      </div>
      <div class="form-group">
        <p><%= form.hidden_field :project_id, :value => @project, class: "form-control" %></p>
      </div>

      <div class="actions">
        <%= form.submit 'Submit', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', :back, class: "btn btn-danger" %>
      </div>
    </form>
  </div>

  <div class="col-sm-7" align="center" style="padding-top: 100px">
    <%= image_tag("crowdfunding_bubbles.png", alt: "Edit Entry", class: "img-responsive") %>
  </div>
  </div>
<% end %>
