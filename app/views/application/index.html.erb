<div class="container">
  <div align="center">
    <%= image_tag("logo.png",size: "320x200", alt: "Edit Entry", class: "animated pulse") %>
    <h4 class="animated pulse">Ángeles Aldunate - Alfonso Zúñiga</h4>

    <% if user_signed_in? %>
      <div class="row animated rubberBand">
        <br>
        <% if current_user.avatar.exists? %>
          <p style="font-size: 18px"><%= image_tag(current_user.avatar.url(:small),size: "60x60", class: "img-circle") %> Hi <%= current_user.first_name %>!</p>
        <% else %>
          <p style="font-size: 18px">Hi <%= current_user.first_name %>!</p>
        <% end %>

      </div>
    <% end %>

  </div>
</div>

<div class="row" style="padding-top: 50px">
  <div class="container">
    <h2>Featured Projects</h2>
  </div>
  <div align="center">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width: 100%; height: 350px">
      <div class="carousel-inner">

        <div class="item active">
          <div class="row">
            <%= image_tag("logo2.png", style: 'height:350px;width:auto;overflow:hidden;') %>
          </div>
        </div>

        <% Project.all.each do |project| %>
          <% if project.outstanding %>
            <div class="item">
              <div class="row" style="padding-left: 20%; padding-right: 20%">
                <div class="col-sm-6">
                  <%= link_to(image_tag(project.main_image.url(:large), class: "img-thumbnail", style: 'height:350px;width:auto;overflow:hidden;'), project) %>
                  <%= %>
                </div>
                <div class="col-sm-6" style="padding-top: 35px">
                  <div class="row">
                    <h3><%= project.title %></h3>
                    <p><%= project.description %></p>
                    <br>
                    <div class="col-sm-6" align="center">
                      <p><b>Goal: </b>$<%= project.goal %></p>
                    </div>
                    <div class="col-sm-6" align="center">
                      <p>Ends <%= (project.created_at.to_date + (project.duration).months).strftime("%B %e, %Y") %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>