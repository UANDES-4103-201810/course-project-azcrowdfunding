<div class="container">
  <h1>Wishlist Projects</h1>
  <table class="table">
    <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Goal</th>
      <th>Duration</th>
      <th>Markdown</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% current_user.favorite_projects.each do |favorite| %>
      <tr>
        <td><%= favorite.project.title %></td>
        <td><%= favorite.project.description %></td>
        <td><%= favorite.project.goal %></td>
        <td><%= favorite.project.duration %></td>
        <td><%= favorite.project.markdown %></td>
        <td><%= link_to 'Show', favorite.project, :class => "btn btn-link" %></td>

        <td><%= link_to 'Destroy', favorite, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-link" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
